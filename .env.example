# Ansible Environment Variables
# Copy to .env and fill with your values

# Default SSH credentials
ANSIBLE_USER=markeast
ANSIBLE_PASSWORD=your_secure_password

# Alternative authentication
ANSIBLE_SSH_KEY=~/.ssh/id_rsa
ANSIBLE_BECOME_PASSWORD=your_sudo_password

# SSH settings
ANSIBLE_SSH_PORT=22

# Inventory source (static, aws, digitalocean, etc.)
ANSIBLE_INVENTORY_SOURCE=static

# Cloud credentials (if using dynamic inventory)
# AWS_ACCESS_KEY_ID=your_key
# AWS_SECRET_ACCESS_KEY=your_secret
# DO_API_TOKEN=your_token
